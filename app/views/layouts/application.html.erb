<!DOCTYPE html>
<html>
  <head>
    <title>Flix-App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class= "row space-beetwen">
      <nav>
        <div class="logo">
          <%= link_to image_tag('logo'), root_path, alt:"logo" %>
        </div>
        <%= link_to "All Movies", movies_path %>
      </nav>
    </header>
    <div class="content">
      <%= yield %>
    </div>
    <footer>
      <p>Copyright &copy; 
        <%= Time.now.year %>
      </p>
    </footer>
  </body>
</html>
