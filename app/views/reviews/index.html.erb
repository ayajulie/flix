<h1>Reviews for <%=link_to @movie.title, @movie %></h1>
<ul class="reviews">
  <% @reviews.each do |review| %>
    <li>
      <%= render "shared/stars", percent: review.stars_as_percent %>
      <p>
        <%# <%= link_to review.name, movie_review_path(@review) %>
        <%= review.name %>
        <span class="date">
          <%= time_ago_in_words(review.created_at) %> ago
        </span>
      </p>
      <p id="reveiew- <%=review.id %> ">
        <%= review.comment %>
      </p>
      <%# <p><%= link_to "Edit", edit_movie_review_path(@movie, @review)  %></p>
  </li>
<% end %>
</ul>
